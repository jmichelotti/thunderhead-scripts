{
  "manifest_version": 3,
  "name": "HLS Capture for Jellyfin",
  "version": "1.1",
  "description": "Captures m3u8 URLs and sends them to local download server for Jellyfin",
  "permissions": [
    "webRequest",
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "HLS Capture"
  }
}
